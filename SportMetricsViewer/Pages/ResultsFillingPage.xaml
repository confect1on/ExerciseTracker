<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:SportMetricsViewer.MVVM.ViewModels"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:converters="clr-namespace:SportMetricsViewer.Converters"
             x:Class="SportMetricsViewer.Pages.ResultsFillingPage"
             x:Name="ContentPage"
             Title="Упражнения и результаты"
             x:DataType="viewModels:ResultsViewModel">
    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior
            EventName="Loaded"
            Command="{Binding InitializeCommand}" />
    </ContentPage.Behaviors>
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:EnumToDisplayNameConverter x:Key="EnumToDisplayNameConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="15">
                <Label
                    Text="{Binding ExerciseResults.Count, StringFormat='{0}/3'}"
                    HorizontalOptions="Center"
                    Padding="20"></Label>
                <Picker
                    ItemsSource="{Binding 
                        Path=ExerciseTypes}"
                    SelectedItem="{Binding
                        Path=SelectedExerciseType,
                        Mode=TwoWay}"
                    ItemDisplayBinding="{Binding ., Converter={StaticResource EnumToDisplayNameConverter}}">
                </Picker>
                <Picker
                    ItemsSource="{Binding ExercisesForChosenType}"
                    SelectedItem="{Binding SelectedExerciseForChosenType, Mode=TwoWay}">
                    <Picker.ItemDisplayBinding>
                        <MultiBinding StringFormat="{}{0} ({1})">
                            <Binding Path="Name" />
                            <Binding Path="UnitOfMeasurementName" />
                        </MultiBinding>
                    </Picker.ItemDisplayBinding>
                </Picker>
                <Entry Keyboard="Numeric" Text="{Binding Result, Mode=TwoWay}" />
                <Button
                    Text="Сохранить результат"
                    HorizontalOptions="Center"
                    IsEnabled="{Binding ExercisesForChosenType.Count}"
                    Command="{Binding SaveResultsCommand}"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
