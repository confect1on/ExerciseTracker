<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExerciseCollector.Pages.ExerciseCollectorPage"
             x:Name="ContentPage"
             Title="Упражнения и результаты"
             BindingContext="{x:Reference ContentPage}">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="15">
                <Label
                    Text="{Binding Results.Count, StringFormat='{0}/3'}"
                    HorizontalOptions="Center"
                    Padding="20"></Label>
                <Picker
                    ItemsSource="{Binding ExerciseTypes}"
                    SelectedItem="{Binding SelectedExerciseTypeName, Mode=TwoWay}">
                </Picker>
                <Picker
                    ItemsSource="{Binding ExerciseNames}"
                    SelectedItem="{Binding SelectedExerciseName, Mode=TwoWay}">
                </Picker>
                <Entry Keyboard="Numeric" Text="{Binding Result, Mode=OneWayToSource}" />
                <Button
                    Text="Сохранить результат"
                    HorizontalOptions="Center"
                    Clicked="Button_OnClicked"
                    />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
