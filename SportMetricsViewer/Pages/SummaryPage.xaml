<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SportMetricsViewer.Pages.SummaryPage"
             x:Name="ContentPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewModels="clr-namespace:ExerciseTracker.MVVM.ViewModels;assembly=ExerciseTracker.MVVM"
             xmlns:sessionOverview="clr-namespace:ExerciseTracker.MVVM.ViewModels.SessionOverview;assembly=ExerciseTracker.MVVM"
             x:DataType="sessionOverview:SummaryViewModel">
    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior
            EventName="Appearing"
            Command="{Binding InitializeCommand}"/>
    </ContentPage.Behaviors>
    <ContentPage.Content>
        <StackLayout Spacing="20">
            <CollectionView
                ItemsSource="{Binding ExerciseRecordDtos}"
                HorizontalOptions="Center">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="viewModels:ExerciseRecordDto">
                        <StackLayout>
                            <Label FontSize="30" Text="{Binding Name}" />
                            <Label FontSize="30" Text="{Binding Score, StringFormat='Кол-во баллов: {0}'}" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="20"/>
                </CollectionView.ItemsLayout>
            </CollectionView>
            <Label FontSize="30" Text="{Binding SummaryScore, StringFormat='Итого: {0}'}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
