<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SportMetricsViewer.Pages.SummaryPage"
             x:Name="ContentPage"
             xmlns:viewModels="clr-namespace:ExerciseTracker.MVVM.ViewModels;assembly=ExerciseTracker.MVVM">
    <ContentPage.BindingContext>
        <viewModels:SummaryViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout Spacing="20">
            <CollectionView
                ItemsSource="{Binding ExerciseResults}"
                HorizontalOptions="Center">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Label FontSize="30" Text="{Binding Exercise.Name}" />
                            <Label FontSize="30" Text="{Binding Result, StringFormat='Кол-во баллов: {0}'}" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="20"/>
                </CollectionView.ItemsLayout>
            </CollectionView>
            <Label FontSize="30" Text="{Binding SummaryScore, StringFormat='Итого: {0}'}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
