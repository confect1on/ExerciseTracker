<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExerciseCollector.Pages.GenderPage"
             xmlns:viewModels="clr-namespace:ExerciseCollector.MVVM.ViewModels"
             xmlns:enums="clr-namespace:ExerciseCollector.Entities.Enums"
             Title="Пол">
    <ContentPage.BindingContext>
        <viewModels:GenderViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="50">
                <Button
                    Text="Юноши"
                    LineBreakMode="WordWrap"
                    Command="{Binding NavigateToExerciseCollectorPageCommand }"
                    CommandParameter="{x:Static enums:Gender.Male}" />
                <Button
                    Text="Девушки"
                    LineBreakMode="WordWrap"
                    Command="{Binding NavigateToExerciseCollectorPageCommand}"
                    CommandParameter="{x:Static enums:Gender.Female}"/>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
